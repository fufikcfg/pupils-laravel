{
    "swagger": "2.0",
    "info": {
        "title": "Students API",
        "version": "2.1.3"
    },
    "host": "localhost/api",
    "basePath": "/",
    "schemes": [
        "http"
    ],
    "tags": [
        {
            "name": "Authorization",
            "description": "Getting a token for authorization",
            "externalDocs": {
                "description": "For authorization is used",
                "url": "/login"
            }
        },
        {
            "name": "Students",
            "description": "Everything about students",
            "externalDocs": {
                "description": "To get",
                "url": "/students/{method}"
            }
        }
    ],
    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "Authorization"
                ],
                "parameters": [
                    {
                        "in": "header",
                        "name": "name",
                        "description": "account name",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "query",
                        "name": "password",
                        "description": "account password",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "summary": "Getting a token for authorization",
                "responses": {
                    "200": {
                        "description": "token: {token}"
                    },
                    "422": {
                        "description": "User does not exist"
                    }
                }
            }
        },
        "/logout": {
            "post": {
                "tags": [
                    "Authorization"
                ],
                "summary": "Session Destruction",
                "responses": {
                    "200": {
                        "description": "You have been successfully logged out!"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/students/create": {
            "post": {
                "tags": [
                    "Students"
                ],
                "parameters": [
                    {
                        "in": "header",
                        "name": "SLastName",
                        "description": "Surname student",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "header",
                        "name": "SFirstName",
                        "description": "Name student",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "header",
                        "name": "SMidName",
                        "description": "MiddleName student",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "header",
                        "name": "SBirthDate",
                        "description": "Student s date of birth",
                        "required": true,
                        "type": "string",
                        "format": "date"
                    },
                    {
                        "in": "header",
                        "name": "classes_id",
                        "description": "classes id student",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "summary": "Create a new student",
                "responses": {
                    "200": {
                        "description": "Student {SLastName} {SFirstName} {SMidName} added"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "422": {
                        "description": "Invalid validation"
                    }
                }
            }
        },
        "/students/show": {
            "post": {
                "tags": [
                    "Students"
                ],
                "parameters": [
                    {
                        "in": "header",
                        "name": "valueElement",
                        "description": "value element",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "summary": "Show list students by classes id",
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        },
        "/students/destroy/{id}": {
            "delete": {
                "tags": [
                    "Students"
                ],
                "parameters": [
                    {
                        "in": "query",
                        "name": "id",
                        "description": "id",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "summary": "Deleting by ID",
                "responses": {
                    "200": {
                        "description": "{id} - deleted"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Invalid ID supplied"
                    },
                    "404": {
                        "description": "Order not found"
                    }
                }
            }
        },
        "/students/report": {
            "get": {
                "tags": [
                    "Students"
                ],
                "summary": "Show report",
                "responses": {
                    "200": {
                        "description": "Show report"
                    },
                    "401": {
                        "description": "Unauthorized"
                    }
                }
            }
        }
    },
    "definitions": {
        "Classes": {
            "properties": {
                "id": {
                    "type": "integer"
                },
                "level_study": {
                    "type": "integer"
                },
                "classes_letter": {
                    "type": "string"
                }
            }
        },
        "Students": {
            "properties": {
                "id": {
                    "type": "integer"
                },
                "SLastName": {
                    "type": "string"
                },
                "SFirstName": {
                    "type": "string"
                },
                "SMidName": {
                    "type": "string"
                },
                "classes_id": {
                    "type": "array",
                    "$ref": "#/definitions/Classes"
                },
                "SBirthDate": {
                    "type": "string",
                    "format": "date"
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        }
    }
}
